<%= form_for(@user) do |f| %>
 <h4 class="ui block top centered attached header">Edit User Info</h4>
   <div class="ui bottom attached secondary segment">
<div class="ui fluid form segment">
  <div class="three fields">
    <div class="field">
      <label>e-Mail</label>
  		<%= f.email_field :email %></td>
    </div>
    <div class="field">
      <label>Salt</label>
  		<%= f.text_field :password_salt %>
    </div>
    <div class="field">
      <label>Roles</label>
      <%= f.text_field :role_as_string %>
    </div>
  </div>
  <div class="one field">
  <div class="field">
      <label>Hash</label>
      <%= f.text_field :password_hash %>
    </div>
  </div>
  <%= f.submit "Update", :class => "ui button" %>
</div>
<% end %>
</div>
<br> 

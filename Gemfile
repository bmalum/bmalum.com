# Monogif as Database Server 
gem 'mongoid', '~> 4', github: 'mongoid/mongoid'
# Bson serializer (MongoID Dependency)
gem 'bson_ext'
# Lograge - For better Logging
gem 'lograge'
# Use for generatin Hashes an Salts for the User and Session Auth 
gem 'bcrypt', :require => "bcrypt"
# Redcarped for Text/Markdown to HTML
gem 'redcarpet'